<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItem_IS"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin_small"
    android:layout_marginRight="@dimen/default_margin_small"
    android:layout_marginTop="@dimen/default_margin_small"
    android:background="@android:color/white"
    app:cardElevation="@dimen/default_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_mini"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStateName_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/tvStateAbbr_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/lorem" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCapital_IS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_capital_black_24dp"
            android:drawablePadding="@dimen/default_drawable_padding"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            tools:text="@tools:sample/cities" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLargestCity_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_city_black_24dp"
                android:drawablePadding="@dimen/default_drawable_padding"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/cities" />

            <TextView
                android:id="@+id/tvStateId_IS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/us_zipcodes" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>